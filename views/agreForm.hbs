<h4>Agregar alumno</h4>
<div class="main">
    <hr>

    <form action="/usuario/agregar/" method="post">

        <div class="div_nombre_id">
            <label for="ID">ID:</label>
            <input type="number" name="ID" min="1" max="9999" placeholder="ID">

            <label for="Nombre">Nombre de alumno:</label>
            <input type="text" name="Nombre" placeholder="Inserte nombre del alumno">
        </div>

        <div class="div_correo_CodCurso">
            <label for="codCurso">Codigo de Curso:</label>
            <input type="number" name="codCurso" min="1" max="6" placeholder="Codigo">

            <label for="Email">E-mail:</label>
            <input type="email" name="Email" placeholder="Inserte E-mail del alumno" >
        </div>


        <div class="div_submin_reset">
            <input type="submit" value="Agregar">
        </div>
    </form>
</div>